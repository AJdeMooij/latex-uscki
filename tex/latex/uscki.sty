\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{uscki}[2014/05/23 USCKI Incognito Logo package]

% Install the font type
\DeclareFontFamily{T1}{ckilogos}{}
\DeclareFontShape{T1}{ckilogos}{m}{n}{ <-> ckilogos}{}
\pdfmapline{+ckilogos\space <ckilogos.ttf\space <T1-WGL4.enc}

% Load CKI font
\def\@usckilogo#1{{\usefont{T1}{ckilogos}{m}{n} #1 }}

% Define character commands
\newcommand{\cki}{\@usckilogo{a}\hspace{-.15cm}}
\newcommand{\AI}{\@usckilogo{b}\hspace{-.15cm}}
\newcommand{\USCKI}{\@usckilogo{c}}
\newcommand{\ABCLogo}{\@usckilogo{d}}
\newcommand{\Bata}{\@usckilogo{e}}
\newcommand{\cafeCKI}{\@usckilogo{f}}
\newcommand{\DraeCKI}{\@usckilogo{g}}
\newcommand{\LoeCKI}{\@usckilogo{h}}
\newcommand{\SympoCKI}{\@usckilogo{i}} 

